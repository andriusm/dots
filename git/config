[user]
	name = Andrius Miasnikovas
	email = andriusms@gmail.com
	signingkey = 0137C485
[color]
	ui = auto
[alias]
	fap = fetch --all --prune
	pom = pull origin master
	
	a = add
	c = commit
	br = branch
	co = checkout
	amend = commit --amend
	nsm = diff --name-status master

	st = status
	s = status --short --untracked-files

	r = rebase
	ri = rebase --interactive
	rc = rebase --continue
	rs = rebase --skip
	di = diff
	dc = diff --cached
	ds = diff --stat=160,120
	dh1 = diff HEAD~1
	l = log --graph --abbrev-commit --date=relative
	head = !git l -1
	h = !git head
	la = !git l --all
	b = branch --verbose
	re = remote --verbose
	redo = reset --soft HEAD^
	purge = !git reset --hard && git clean -fd
	listconf = config --global --list
	ctags = !.git/hooks/ctags
	spull = svn rebase
	spush = svn dcommit
[format]
	pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[core]
	editor = nvim
	autocrlf = input
	safecrlf = false
	excludesfile = "$HOME/.config/git/global_ignore"
	quotepath = false
	commitGraph = true
	pager = delta
[diff]
	guitool = kdiff3
[merge]
	tool = kdiff3
	conflictstyle = diff3
[credential]
[apply]
	whitespace = nowarn

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[gpg]
	program = gpg

; [url "git@github.com:"]
; 	insteadOf = https://github.com/

[pull]
	ff = only
[gc]
	writeCommitGraph = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	side-by-side = true

	syntax-theme = GitHub
	zero-style = syntax
[diff]
	colorMoved = default

